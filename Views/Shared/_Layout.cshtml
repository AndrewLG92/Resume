<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Resume</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Resume.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header class="shadow-lg">
        <nav class="navbar">
            <div class="container justify-content-center">
                <div class="d-flex flex-row">
                    <ul class="navbar-nav row gap-5">
                        <li class="nav-item col">
                            <a class="nav-link" asp-action="Index" asp-action="Index">
                                <h4>Home</h4>
                            </a>
                        </li>
                        <li class="nav-item col">
                            <a href="#" class="nav-link">
                                <h4>Resume</h4>
                            </a>
                        </li>
                        <li class="nav-item col">
                            <a href="#" class="nav-link">
                                <h4>Projects</h4>
                            </a>
                        </li>
                        <li class="nav-item col">
                            <a href="#" class="nav-link">
                                <h4>About Me</h4>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            &copy; 2024 - Resume - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
